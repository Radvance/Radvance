<?xml version="1.0" encoding="UTF-8"?>
<schema>
    <table name="thing">
        <column name="id" type="integer" unsigned="true" autoincrement="true"/>
        <column name="name" type="string" length="64" />
        <column name="content" type="text" />
        <column name="created_at" type="integer" notnull="false" />
        <column name="created_by" type="string" length="64" notnull="false" />
        <column name="deleted_at" type="integer" notnull="false" />
        <column name="deleted_by" type="string" length="64" notnull="false" />
        <column name="updated_at" type="integer" notnull="false" />
        <column name="updated_by" type="string" length="64" notnull="false" />

        <index name="primary" primary="true" columns="id" />
    </table>
</schema>
