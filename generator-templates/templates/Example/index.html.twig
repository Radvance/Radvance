{% extends "@Theme/layout.html.twig" %}

{% block content %}
    {% if entities|length %}
        <table class="table table-{{ name }}">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>

            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        Empty list
    {% endif %}
{% endblock %}
